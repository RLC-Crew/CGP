@model CGP.Models.Menu
<ul id="menu" class="nav navbar-nav">
    @if (Model != null)
    { 
        foreach (var item in Model.Items)
        {
            <li class="dropdown">
                <a href="@item.MenuItemPath" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@item.MenuItemName<span class="caret"></span></a>
                @if (item.ChildMenuItems.Any())
                {
                    <ul class="dropdown-menu">
                    @foreach (var subitem in item.ChildMenuItems)
                    {
                        <li><a href="@subitem.MenuItemPath">@subitem.MenuItemName</a></li>
                    }                    
                    </ul>
                }
            </li>
        }
    }
</ul>
